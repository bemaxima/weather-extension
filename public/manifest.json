{
  "manifest_version": 2,
  "name": "Weather extension",
  "author": "Ehsan Majdabadi",
  "version": "1.0.1",
  "description": "Get the weather condition based on current location",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["storage", "geolocation"],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
